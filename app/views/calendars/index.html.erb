<p style="color: green"><%= notice %></p>

<h1>Calendars</h1>
<%= month_calendar events: @calendars do |date, calendars| %>
  <%= date %>
  <% calendars.each do |calendar| %>
    <%= calendar.name %>
  <% end  %>
<% end %>
<div id="calendars">
  <% @calendars.each do |calendar| %>
    <%= render calendar %>
    <p>
      <%= link_to "Show this calendar", calendar %>
    </p>
  <% end %>
</div>

<%= link_to "New calendar", new_calendar_path %>
